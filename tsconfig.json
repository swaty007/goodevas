{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "skipLibCheck": true,
        "useDefineForClassFields": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "lib": ["esnext", "dom"],
        "baseUrl": "./",
        "paths": {
            "@/*": ["./resources/js/*"],
            "ziggy-js": ["./vendor/tightenco/ziggy"],
            "craftable-pro/*": ["vendor/brackets/craftable-pro/resources/js/*"]
        }
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.vue",

        "resources/js/craftable-pro/**/*.ts",
        "resources/js/craftable-pro/**/*.d.ts",
        "resources/js/craftable-pro/**/*.tsx",
        "resources/js/craftable-pro/**/*.vue"
    ]
}
